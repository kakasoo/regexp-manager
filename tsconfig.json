{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "noLib": false,
        "lib": ["ES2022"],
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/types/index.d.ts"],
    "exclude": ["node_modules", "src/test", "src/test/example"]
}
